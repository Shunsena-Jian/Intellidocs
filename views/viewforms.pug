extends layout.pug

block body
    .w3-main(style='margin-left:250px')
        .w3-row.w3-padding-32
            .shadowEffect.w3-container2.w3-card.w3-white.w3-round.w3-margin
                h1.w3-center View Forms

        .w3-row
            .w3-half.w3-padding
                .shadowEffect.w3-container.w3-white.w3-round.w3-margin
                    h3 To Do
                    hr.w3-clear
                    each userforms in currentForms
                        .w3-half.w3-container
                            .shadowEffect.w3-container.w3-card.w3-white.w3-round.w3-margin.round.w3-padding
                                h3  #{userforms.form_name}
                                hr.w3-clear
                                p
                                    b  Status:
                                    if (!userforms.form_status)
                                        |  N/A
                                    else
                                        |  #{userforms.form_status}
                                p
                                    b  Date Created:
                                    if (!userforms.date_created)
                                        |  N/A
                                    else
                                        |  #{userforms.date_created}
                                p
                                    b  Version:
                                    |  #{userforms.form_version}
                                a(href=`/formview/${userforms.form_control_number}`) View Form
            .w3-half.w3-padding
                .shadowEffect.w3-container.w3-white.w3-round.w3-margin
                    h3 Forms shared with you
                    hr.w3-clear
                    each userforms in currentForms
                        .w3-third.w3-container
                            .shadowEffect.w3-container.w3-card.w3-white.w3-round.w3-margin.round.w3-padding
                                h3  #{userforms.form_name}
                                hr.w3-clear
                                p
                                    b  Status:
                                    if (!userforms.form_status)
                                        |  N/A
                                    else
                                        |  #{userforms.form_status}
                                p
                                    b  Date Created:
                                    if (!userforms.date_created)
                                        |  N/A
                                    else
                                        |  #{userforms.date_created}
                                p
                                    b  Last Edited:
                                    if (!userforms.last_edited)
                                        |  N/A
                                    else
                                        |  #{userforms.last_edited}
                                a(href=`/formview/${userforms.form_control_number}`) View Form