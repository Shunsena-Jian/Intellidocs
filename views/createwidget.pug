extends layout.pug

block body
    .w3-main#main(style='margin-left:230px; margin-top:50px; margin-bottom:100px;')
        .w3-row.w3-container.w3-border-black
            .w3-row.w3-border-black.w3-container.w3-padding-16.w3-card
                h3.w3-bold.w3-margin Create Widget
                .w3-row.w3-container
                    .w3-half
                        input#widgetName.w3-row.w3-input.w3-margin.w3-padding-16.w3-text-size-30(placeholder="Type Widget Name [Required]" required='')
                        label.w3-margin-left(for='widgetCategory') Widget Category:
                        select#widgetCategory.w3-margin(onchange='')
                            option(value='Personalized') Personalized
                            option(value='Header') Header
                            option(value='Information') Information
                            option(value='Checkbox') Checkbox
                            option(value='Grouped') Grouped
                            option(value='Text') Text
                            option(value='Signature') Signature
                            option(value='Table') Table
                    .w3-half
                        .w3-third.w3-right
                            br
                            br
                            br
                            br
                            br
                            button.w3-button.w3-bold.w3-blue-classic(onclick='validateWidget()')
                                | Save Widget
                br
                .w3-row.w3-card
                    .grid-container.w3-light-grey.w3-padding-16
                        .grid-item
                            label(for='modifyOrientation') Orientation:
                            select#modifyOrientation(onchange='modifyOrientation()')
                                option(value='square') Square
                                option(value='landscape-rectangle') Landscape Rectangle
                                option(value='portrait-rectangle') Portrait Rectangle
                        .grid-item.borderless
                        .grid-item
                            label(for='colorSelect') Select Text Color:
                            select#colorSelect(onchange='changeTextColor()')
                                option(value='black') Black
                                option(value='white') White
                                option(value='red') Red
                                option(value='blue') Blue
                                option(value='grey') Grey
                        .grid-item.borderless
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeBold()')
                                i.fa.fa-bold.icon-light
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeItalic()')
                                i.fa.fa-italic.icon-light
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeUnderline()')
                                i.fa.fa-underline.icon-light
                        .grid-item.borderless
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeAlignLeft()')
                                i.fa.fa-align-left.icon-light
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeAlignRight()')
                                i.fa.fa-align-right.icon-light
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeAlignCenter()')
                                i.fa.fa-align-center.icon-light
                        .grid-item
                            a.w3-bar-item.w3-button.w3-hide-small.w3-hover-white(onclick='makeAlignJustify()')
                                i.fa.fa-align-justify.icon-light
                        .grid-item.borderless

            .w3-row.w3-container
                .w3-twothird.w3-container
                    h6.w3-text-red.w3-bold.w3-italic Click on specific text fields to make them editable

                .w3-twothird.w3-container
                    #widgetCanvas.w3-box.drop-container

                .w3-third
                    .widget-container.w3-container.w3-light-grey
                        include widgetdragbar

    #createWidgetFailedModal
        #createWidgetFailedOverLay.dialogoverlay-green
        #createWidgetFailedDialogbox.dialogbox.slit-in-vertical
            #randomDiv
                .dialogboxhead-red
                    .i.fa.fa-exclamation-circle Error
                .dialogboxbody
                    p#widgetValidationFailedMessage
            .dialogboxfoot
                button.pure-material-button-contained.active(onclick=`hideFailedWidgetCreationModal()`) Ok

    #createWidgetSuccessModal
        #createWidgetSuccessOverLay.dialogoverlay-green
        #createWidgetSuccessDialogbox.dialogbox.slit-in-vertical
            #randomDiv
                .dialogboxhead-green
                    .i.fa.fa-exclamation-circle Success
                .dialogboxbody
                    h1 Widget saved successfully!
                    p You will now be routed back to the homepage.
            .dialogboxfoot
                button.pure-material-button-contained.active(onclick=`hideSuccessWidgetCreationModal()`) Ok

    #confirmWidgetCreationModal
        #confirmWidgetCreationOverLay.dialogoverlay
        #confirmWidgetCreationDialogbox.dialogbox.slit-in-vertical
            #randomDiv
                .dialogboxhead
                    .i.fa.fa-exclamation-circle Confirm Widget creation
                .dialogboxbody
                    h1 Please confirm the details before saving
                    p#creationWidgetName
                    p#creationWidgetMessage
            .dialogboxfoot
                button.pure-material-button-contained.active(onclick=`createWidget()`) Confirm
            .dialogboxfoot2
                button.pure-material-button-contained.active(onclick=`hideConfirmWidgetCreationModal()`) Cancel

