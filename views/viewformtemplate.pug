                            script.
                                function dropDownUpdateCanvas(formControlNumber){
                                    var versionChoice = document.getElementById("versionDropDown").value;

                                    const data = {
                                        formControlNumber: formControlNumber,
                                        versionChoice: versionChoice
                                    };

                                    $.ajax({
                                        type: 'PUT',
                                        url: '/AJAX_viewFormVersion',
                                        data: data,
                                        success: function(response) {
                                            if (response.status_code === 0) {
                                                // modal success
                                                alert("Rendering the Chosen Version");
                                                document.getElementById("form-content").innerHTML = response.formContent;
                                            } else if (response.status_code === 1){
                                                // modal error
                                                alert("Error in Viewing Chosen Version");
                                            } else {
                                                // modal error
                                                alert("AJAX Error");
                                            }
                                        },
                                        error: function(error){
                                            console.error('AJAX Error: ', error);
                                        }
                                    });
                                }

                                function toggleSharing(){
                                    var toggleSharingButton = document.getElementById("toggleSharingButton");
                                    var formDetailsSharingSetting = document.getElementById("formDetailsSharingSetting");
                                    var toggleSharingButtonValue = document.getElementById("toggleSharingButton").innerHTML;
                                    var confirmationMessage;
                                    var updatedSharingStatus;

                                    if(toggleSharingButtonValue == "Allow Sharing"){
                                        confirmationMessage = "Form currently declines sharing, are you sure you want to enable it?";
                                    }else{
                                        confirmationMessage = "Form currently allows sharing, are you sure you want to disable it?";
                                    }

                                    var result = window.confirm(confirmationMessage);

                                    if(result){
                                        if(toggleSharingButtonValue == "Allow Sharing"){
                                            toggleSharingButton.innerHTML = "Disable Sharing";
                                            formDetailsSharingSetting.innerHTML = "Sharing : Allowed";
                                            updatedSharingStatus = true;
                                        }else{
                                            toggleSharingButton.innerHTML = "Allow Sharing";
                                            formDetailsSharingSetting.innerHTML = "Sharing : Not Allowed";
                                            updatedSharingStatus = false;
                                        }
                                    }

                                    var data = {
                                        formControlNumber: formBlock.form_control_number,
                                        sharingStatus: updatedSharingStatus
                                    };

                                    $.ajax({
                                        type: 'PUT',
                                        url: '/AJAX_toggleSharing',
                                        data: data,
                                        success: function(response){
                                            if(response.status_code === 0) {
                                                // modal success
                                                alert("Sharing Status Changed.");
                                            } else if (response.status_code === 1) {
                                                // modal error
                                                alert("Sharing Status Error.")
                                            } else {
                                                alwer(response.error);
                                            }
                                        },

                                        error: function(error){
                                            alert(response.error);
                                        }
                                    });

                                }

                                function togglePublish(){
                                    var togglePublishButton = document.getElementById("togglePublishButton");
                                    var formDetailsStatusSetting = document.getElementById("formDetailsStatusSetting");
                                    var togglePublishButtonValue = document.getElementById("togglePublishButton").innerHTML;
                                    var confirmationMessage;
                                    var updatedStatus;

                                    if(togglePublishButtonValue == "Publish Form"){
                                        confirmationMessage = "Are you sure you want to publish this form?";
                                    }else{
                                        confirmationMessage = "Are you sure you want to un-publish this form?";
                                    }

                                    var result = window.confirm(confirmationMessage);

                                    if(result){
                                        if(togglePublishButtonValue == "Publish Form"){
                                            togglePublishButton.innerHTML = "Un-publish Form";
                                            formDetailsStatusSetting.innerHTML = "Status : Published";
                                            updatedStatus = "Published";
                                        }else{
                                            togglePublishButton.innerHTML = "Publish Form";
                                            formDetailsStatusSetting.innerHTML = "Status : Template";
                                            updatedStatus = "Template";
                                        }
                                    }

                                    var data = {
                                        formControlNumber: formBlock.form_control_number,
                                        formStatus: updatedStatus
                                    };

                                    $.ajax({
                                        type:'PUT',
                                        url: '/AJAX_togglePublish',
                                        data: data,
                                        success: function(response) {
                                            if(response.status_code === 0) {
                                                // modal success
                                                alert("Form status changed");
                                            } else if(response.status_code === 1) {
                                                // modal error
                                                alert("There was an error updating the status");
                                            } else {
                                                alert(response.error);
                                            }
                                        },
                                        error: function(error){
                                            console.error('AJAX Error: ' + error);
                                        }
                                    });
                                }


