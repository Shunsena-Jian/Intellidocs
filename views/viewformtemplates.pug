extends layout.pug

block body
    .w3-main(style='margin-left:250px')
        .w3-row.w3-padding-64
            .w3-container.w3-white.w3-round.w3-margin
                h3.w3-bold.w3-margin View Forms
                each forms in currentForms
                    .w3-third.w3-container
                        .shadowEffect.w3-white.w3-round-xxlarge
                            .banner.w3-round-large
                              img(src='../src/card_banner.png', alt='Card Banner')
                            .w3-container.w3-center
                                h3.w3-center.w3-bold.all-caps  #{forms.form_name}
                                hr.w3-clear

                                table.center-table.w3-row
                                    tr
                                        td
                                            b Status:
                                        td
                                            if !forms.form_status
                                              | N/A
                                            else
                                              | #{forms.form_status}
                                    tr
                                        td
                                            b Date Created:
                                        td
                                            if !forms.date_saved
                                              | N/A
                                            else
                                              | #{forms.date_saved}
                                    tr
                                        td
                                            b Time Created:
                                        td
                                            if !forms.time_saved
                                              | N/A
                                            else
                                              | #{forms.time_saved}
                                    tr
                                        td
                                            b Version:
                                        td
                                            | #{forms.form_version}

                                br
                            .button-container.w3-row
                                a.full-width-button.w3-center.all-caps(href=`/viewformtemplate/${forms.form_control_number}`) View Form

                                br
                        br
                        br

