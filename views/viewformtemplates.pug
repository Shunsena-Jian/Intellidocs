extends layout.pug

block body
    .w3-main(style='margin-left:250px')
        .w3-row.w3-padding-64
            .w3-container.w3-white.w3-round.w3-margin
                h4 View Forms
                hr.w3-clear
                each forms in currentForms
                    .w3-third.w3-container
                        .shadowEffect.w3-container.w3-card.w3-white.w3-round.w3-margin.round.w3-padding
                            h3  #{forms.form_name}
                            hr.w3-clear
                            p
                                b  Status:
                                if (!forms.form_status)
                                    |  N/A
                                else
                                    |  #{forms.form_status}
                            p
                                b  Date Created:
                                if (!forms.date_saved)
                                    |  N/A
                                else
                                    |  #{forms.date_saved}
                            p
                                b  Time Created:
                                if (!forms.time_saved)
                                    |  N/A
                                else
                                    |  #{forms.time_saved}
                            p
                                b  Version:
                                    |  #{forms.form_version}
                            a(href=`/viewformtemplate/${forms.form_control_number}`) View Form
