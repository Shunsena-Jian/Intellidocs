    //.w3-row.w3-padding-16
    .w3-row
        button.w3-button.w3-block.w3-theme-dark.w3-left-align(onclick="toggleAccordion('widgetTextFieldsContainer')")
            i.fa.fa-caret-square-o-down.fa-fw.w3-margin-right
            |  Text Fields
        #widgetTextFieldsContainer.w3-hide.w3-container
            h3.textbox.w3-row.w3-container.box.draggable.w3-hover-light-grey(draggable="true")
                |                         This is a sample title
            hr.w3-clear
            h5.textbox.w3-row.w3-container.box.draggable.w3-hover-light-grey(draggable="true")
                |                         This is a sample normal text
            hr.w3-clear
            textarea.w3-textarea.w3-row.w3-container.box.draggable.w3-hover-light-grey(draggable="true" readonly type='text' placeholder='This is a sample of a paragraph')
            h3.w3-clear
            input.draggable.box.w3-input(readonly draggable="true" type='date' placeholder='set deadline')

            hr.w3-newline-2

    //.w3-row.w3-padding-16
